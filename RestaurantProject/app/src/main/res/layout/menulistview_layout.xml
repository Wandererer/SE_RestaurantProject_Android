<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="menuName"
            android:id="@+id/menuNameTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="contentDescriptionTextView"
            android:textSize="17dp"
            android:id="@+id/menuContentTextView"
            android:layout_below="@+id/menuPriceTextView"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Price"
            android:layout_marginBottom="20dp"
            android:id="@+id/menuPriceTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#000000"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menuContentTextView" />


</RelativeLayout>
